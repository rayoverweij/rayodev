---
import { Image } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
import profilepic from "../assets/rayo.jpg";

interface Props {
	title: string;
	desc: string;
	image: string;
	imageAlt: string;
}

const { title, desc, image, imageAlt } = Astro.props;
---

<BaseLayout
	title={title}
	desc={desc}
	image={image}
	imageAlt={imageAlt}
>
	<div class="max-w-7xl mt-8 md:mt-24 mx-auto">
		<header class="relative flex items-center pb-6 border-b-2">
			<a href="/" class="font-semibold text-4xl text-black dark:text-white uppercase no-underline hover:text-blue-700">
				Rayo Verwe&IJlig;
			</a>
			<a href="/about" class="text-lg text-black dark:text-white ml-24 no-underline hover:text-blue-700">
				About
			</a>
			<a href="/updates" class="text-lg text-black dark:text-white ml-24 no-underline hover:text-blue-700">
				Updates
			</a>
			<a href="/research" class="text-lg text-black dark:text-white ml-24 no-underline hover:text-blue-700">
				Research
			</a>

			<div class="w-[256px] h-[300px] absolute -bottom-[288px] bg-black border-2 rounded-b-[100px] rounded-t-lg overflow-hidden">
				<Image
					width={500}
					class="absolute top-0 left-0 hover:opacity-15 transition"
					src={profilepic}
					alt="A headshot of Rayo smiling at the camera"
				/>
				<p class="text-white text-center pt-[190px]">
					Photo by Chris Scott
				</p>
			</div>

			<div class="absolute right-4 -bottom-4.5 flex">
				<button
					class="group self-center -mr-3 py-1 pl-1.5 pr-4 border-2 hover:border-dashed rounded-l-xl bg-white dark:bg-stone-950 cursor-pointer"
					id="themeToggleLock"
				>
					<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover:hidden dark:fill-white" viewBox="0 0 16 16">
						<path fill-rule="evenodd" d="M8 0a4 4 0 0 1 4 4v2.05a2.5 2.5 0 0 1 2 2.45v5a2.5 2.5 0 0 1-2.5 2.5h-7A2.5 2.5 0 0 1 2 13.5v-5a2.5 2.5 0 0 1 2-2.45V4a4 4 0 0 1 4-4m0 1a3 3 0 0 0-3 3v2h6V4a3 3 0 0 0-3-3"/>
					</svg>
					<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 hidden group-hover:block dark:fill-white" viewBox="0 0 16 16">
						<path fill-rule="evenodd" d="M8 0c1.07 0 2.041.42 2.759 1.104l.14.14.062.08a.5.5 0 0 1-.71.675l-.076-.066-.216-.205A3 3 0 0 0 5 4v2h6.5A2.5 2.5 0 0 1 14 8.5v5a2.5 2.5 0 0 1-2.5 2.5h-7A2.5 2.5 0 0 1 2 13.5v-5a2.5 2.5 0 0 1 2-2.45V4a4 4 0 0 1 4-4"/>
					</svg>
				</button>
				<button
					class="group px-4 py-2 bg-black dark:bg-white border-2 rounded-l-full dark:cursor-pointer"
					id="themeToggleLight"
				>
					<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 hidden dark:block dark:group-hover:hidden" viewBox="0 0 16 16">
						<path d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6m0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0m9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708"/>
					</svg>
					<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 dark:hidden fill-white group-hover:block dark:group-hover:fill-black" viewBox="0 0 16 16">
						<path d="M8 12a4 4 0 1 0 0-8 4 4 0 0 0 0 8M8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0m0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13m8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5M3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8m10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0m-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0m9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707M4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708"/>
					</svg>
				</button>
				<button
					class="group -ml-1 px-4 py-2 bg-white dark:bg-stone-950 border-2 rounded-r-full cursor-pointer dark:cursor-auto"
					id="themeToggleDark"
				>
					<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 dark:hidden group-hover:hidden" viewBox="0 0 16 16">
						<path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286"/>
					</svg>
					<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 hidden dark:block group-hover:block fill-white group-hover:fill-black dark:group-hover:fill-white" viewBox="0 0 16 16">
						<path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278"/>
						<path d="M10.794 3.148a.217.217 0 0 1 .412 0l.387 1.162c.173.518.579.924 1.097 1.097l1.162.387a.217.217 0 0 1 0 .412l-1.162.387a1.73 1.73 0 0 0-1.097 1.097l-.387 1.162a.217.217 0 0 1-.412 0l-.387-1.162A1.73 1.73 0 0 0 9.31 6.593l-1.162-.387a.217.217 0 0 1 0-.412l1.162-.387a1.73 1.73 0 0 0 1.097-1.097zM13.863.099a.145.145 0 0 1 .274 0l.258.774c.115.346.386.617.732.732l.774.258a.145.145 0 0 1 0 .274l-.774.258a1.16 1.16 0 0 0-.732.732l-.258.774a.145.145 0 0 1-.274 0l-.258-.774a1.16 1.16 0 0 0-.732-.732l-.774-.258a.145.145 0 0 1 0-.274l.774-.258c.346-.115.617-.386.732-.732z"/>
					</svg>
				</button>
			</div>
		</header>

		<main class="max-w-[88ch] mx-auto px-6 md:px-0">
			<slot />
		</main>

		<footer class="mt-40 mb-20 text-stone-600 text-center">
			&copy; Rayo Verweij <span id="date"></span>.
		</footer>

		<script>
			const year = new Date().getFullYear();
			document.getElementById("date")!.innerText = year.toString();

			const toggleLock = document.getElementById("themeToggleLock") as HTMLButtonElement;
			const toggleLight = document.getElementById("themeToggleLight") as HTMLButtonElement;
			const toggleDark = document.getElementById("themeToggleDark") as HTMLButtonElement;
			
			if(!("theme" in localStorage)) toggleLock.classList.add("hidden");
			toggleLight.disabled = !document.documentElement.classList.contains("dark");
			toggleDark.disabled = document.documentElement.classList.contains("dark");
			
			toggleLock.addEventListener("click", () => {
				localStorage.removeItem("theme");
				document.documentElement.classList.toggle("dark", window.matchMedia("(prefers-color-scheme: dark)").matches);
				toggleLock?.classList.add("hidden");
				toggleLight.disabled = !document.documentElement.classList.contains("dark");
				toggleDark.disabled = document.documentElement.classList.contains("dark");
			});

			toggleLight.addEventListener("click", () => {
				localStorage.theme = "light";
				document.documentElement.classList.remove("dark");
				toggleLock.classList.remove("hidden");
				toggleLight.disabled = true;
				toggleDark.disabled = false;
			});

			toggleDark.addEventListener("click", () => {
				localStorage.theme = "dark";
				document.documentElement.classList.add("dark");
				toggleLock.classList.remove("hidden");
				toggleDark.disabled = true;
				toggleLight.disabled = false;
			});
		</script>
</BaseLayout>
